<ScrollView
    android:id="@+id/scroll_detail"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fjnu.zjf.movie.IntroductionFragment">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="90dp"
            android:layout_margin="5dp"
            android:layout_height="150dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="150dp"
            android:layout_toRightOf="@id/iv"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:minHeight="11dp"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    android:progressDrawable="@drawable/ratingbar_back"/>
                <TextView
                    android:id="@+id/tv_rating"
                    android:textColor="#ff7302"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_rating_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_pub_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_genres"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_countries"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_summary"
            android:layout_below="@id/iv"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:background="@color/detail_content"
            android:layout_height="wrap_content" />
        <include layout="@layout/item_listview_cast"
            android:id="@+id/layout_director"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/tv_summary"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <com.fjnu.zjf.movie.widgets.AppendableListView
            android:id="@+id/lv_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_below="@id/layout_director"/>
        <com.fjnu.zjf.movie.widgets.AppendableListView
            android:id="@+id/lv_comments"
            android:layout_below="@id/lv_cast"
            android:layout_margin="@dimen/text_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</ScrollView>