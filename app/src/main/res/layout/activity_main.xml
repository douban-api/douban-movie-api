<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fjnu.zjf.movie.activities.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/black"
        toolbar:titleTextColor="@android:color/white"
        toolbar:navigationIcon="@drawable/navigationicon"
        toolbar:title="@string/app_name">
        <ImageButton
            android:layout_marginLeft="100dp"
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/abs__ic_search"/>
        <EditText
            android:id="@+id/edt_search"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/input"
            android:textColorHint="@color/detail_content"
            android:textSize="14sp"
            android:textColor="@color/detail_content"
            android:drawableLeft="@drawable/abs__ic_search"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/btn_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/abs__ic_go"
            android:visibility="gone"/>
    </android.support.v7.widget.Toolbar>
    <com.gigamole.library.navigationtabstrip.NavigationTabStrip
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tab_strip"
        app:nts_titles="@array/title_array"
        app:nts_size="15sp"
        android:background="#141414"
        app:nts_color="@android:color/darker_gray"
        app:nts_type="line"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
