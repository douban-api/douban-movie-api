<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:layout_marginTop="@dimen/text_margin"
        android:id="@+id/iv_listview"
        android:layout_width="60dp"
        android:layout_height="90dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <TextView
            android:id="@+id/tv_title"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/title_original"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#999999"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:minHeight="11dp"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:progressDrawable="@drawable/ratingbar_back"/>
            <!--android:isIndicator="true"这行的目的是设置ratingbar不可点击，防止抢去gridview的点击事件-->
            <TextView
                android:id="@+id/tv_rating"
                android:textColor="#ff7302"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>